        <activity android:name=".farmers.order.OrderDetailsActivity" />
        <activity android:name=".farmers.order.FarmerOrderActivity" />
        <activity android:name=".retailers.order.OrderListActivity" />
        <activity android:name=".farmers.products.OrderActivity" />
