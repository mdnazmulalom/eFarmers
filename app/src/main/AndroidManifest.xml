        <activity android:name=".retailers.profile.RetailersEditProfileActivity" />
        <activity android:name=".retailers.profile.RetailersProfileActivity" />
        <activity android:name=".farmers.profile.EditProfileActivity" />
        <activity android:name=".farmers.profile.ProfileActivity" />
